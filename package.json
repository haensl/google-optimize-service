{
  "name": "google-optimize-service",
  "version": "1.0.0",
  "description": "Handy universal service abstraction around Google Optimize.",
  "main": "lib/google-optimize-service.node.js",
  "module": "lib/google-optimize-service.esm.js",
  "unpkg": "lib/google-optimize-service.min.js",
  "jsdelivr": "lib/google-optimize-service.min.js",
  "scripts": {
    "build": "npm i && rollup -c && node rollup.node",
    "test": "jest --env=jsdom",
    "test:ci": "jest --runInBand --no-cache --ci --reporters='default' --reporters='jest-junit' --passWithNoTests",
    "tdd": "jest --env=jsdom --watch",
    "lint": "eslint -c .eslintrc.json \"!(lib)/**/*.js\"",
    "lint:ci": "eslint --format junit -o test-results/eslint/results.xml -c .eslintrc.json \"!(lib)/**/*.js\"",
    "prepublishOnly": "npm run build"
  },
  "jest-junit": {
    "outputDirectory": "test-results/jest",
    "outputName": "results.xml",
    "suitName": "google-optimize-service unit tests"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm test",
      "pre-commit": "npm run lint && npm test",
      "post-pull": "npm i"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haensl/google-optimize-service.git"
  },
  "keywords": [
    "google",
    "optimize",
    "optimize",
    "google",
    "service",
    "universal",
    "abstraction"
  ],
  "author": {
    "name": "HP Dietz",
    "url": "https://hpdietz.com",
    "email": "h.p.dietz@gmail.com",
    "twitter": "@h_p_d"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/haensl/google-optimize-service/issues"
  },
  "homepage": "https://github.com/haensl/google-optimize-service#readme",
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@haensl/eslint-config": "^1.3.0",
    "babel-jest": "^25.1.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "jest-junit": "^10.0.0",
    "rollup": "^1.31.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.2.0"
  }
}
